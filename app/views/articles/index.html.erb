<h1>Listing articles</h1>

<br>

<table>
  <tr>
    <th>Title</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <th>&nbsp;-&nbsp;</th>
      <td><%= link_to 'Show', article_path(article) %></td>
      <th>&nbsp;-&nbsp;</th>
      <td><%= link_to 'Edit', article_path(article) %></td>
      <th>&nbsp;-&nbsp;</th>
      <td><%= link_to 'Delete', article_path(article) %></td>
    </tr>
  <% end %>
</table>

<br>

<p> <%= link_to "Create a new article", new_article_path %> </p>
